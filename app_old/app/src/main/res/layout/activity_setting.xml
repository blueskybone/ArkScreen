                <androidx.cardview.widget.CardView
                    android:id="@+id/card_skland_login"
                    style="@style/CardViewTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <TextView
