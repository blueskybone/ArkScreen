    <style name="Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_margin">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="Chip.Normal" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_margin">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipBackgroundColor">?attr/colorBackgroundFloating</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="CardViewChip" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">5dp</item>
    </style>


    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
    </style>

